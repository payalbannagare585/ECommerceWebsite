@model ECommerceWebsite.Models.TagNames
@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-info">Delete Tag Type</h2>
<form asp-action="Delete" method="post">
    <div class="p-4 rounded border">
          <div asp-asp-validation-summary="ModelOnly" class="text-danger">
           <input type="hidden" asp-for="Id"/>
          </div>
          <div class="form-group row">
              <div class="col-2">
                  <label asp-for="TagName"></label>
              </div>
              <div class="col-5">
                  <input asp-for="TagName" readonly="readonly" class="form-control"/>
              </div>
              <span asp-validation-for="TagName" class="text-danger"></span>
          </div>
          <div class="form-group">
              <input type="submit" class="btn btn-danger" value="Delete"/>
              <a asp-action="Index" class="btn btn-success">Back to List</a>
          </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");
    } 

}







