

@model ECommerceWebsite.Models.TagNames
@{
    ViewData["Title"] = "Details";
}

<h2 class="text-info">Tag Type Details</h2>
<form asp-action="Details" method="post">
    <div class="p-4 rounded border">
          <div asp-asp-validation-summary="ModelOnly" class="text-danger">

          </div>
          <div class="form-group row">
              <div class="col-2">
                  <label asp-for="TagName"></label>
              </div>
              <div class="col-5">
                  <input asp-for="TagName" readonly="readonly" class="form-control"/>
              </div>
              <span asp-validation-for="TagName" class="text-danger"></span>
          </div>
          <div class="form-group">

              <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
              <a asp-action="Index" class="btn btn-success">Back to List</a>
            @*<input type="submit" class="btn btn-success" value="Back to list"/>*@
          </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");
    } 
}






